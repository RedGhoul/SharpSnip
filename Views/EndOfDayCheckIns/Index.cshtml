                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhatWentWell)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhatWentBad)
            </td>
