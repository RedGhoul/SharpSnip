@model List<Snips.Data.EndOfDayCheckIn>
<link href="https://unpkg.com/jquery-resizable-columns@0.2.3/dist/jquery.resizableColumns.css" rel="stylesheet">
<link href="https://unpkg.com/bootstrap-table@1.17.1/dist/bootstrap-table.min.css" rel="stylesheet">

<h1>End Of Day Check In - Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table id="table"
       data-toggle="table"
       data-height="700"
       data-pagination="true"
       class="table">
    <thead>
        <tr>
            <th data-field="Created" data-sortable="true">
                Created At
            </th>
            <th data-field="LastModified" data-sortable="true">
                Last Modified
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr id="tr-id-@i" class="tr-class-@i" data-title="bootstrap table" data-object='{"key": "value"}'>
                <td id="td-id-@i" class="td-class-@i" data-title="bootstrap table">
                    @Html.DisplayFor(modelItem => Model[i].Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model[i].LastModified)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Model[i].Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@Model[i].Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{

    <script src="https://unpkg.com/jquery-resizable-columns@0.2.3/dist/jquery.resizableColumns.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.17.1/dist/bootstrap-table.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.17.1/dist/extensions/resizable/bootstrap-table-resizable.min.js"></script>
    <script>
        $(function () {
            $('#table').bootstrapTable()
        })
    </script>
}